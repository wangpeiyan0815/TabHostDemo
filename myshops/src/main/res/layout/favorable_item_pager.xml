<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <TextView
        android:id="@+id/favor_item__nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/favor_item_imageView"
        android:layout_toRightOf="@+id/favor_item_imageView"
        android:text="韩国柚子茶"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/favor_item_imageView"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/favor_item__nameTv"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/favor_item__yuanpriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favor_item_imageView"
        android:layout_alignLeft="@+id/favor_item__nameTv"
        android:layout_alignStart="@+id/favor_item__nameTv"
        android:text="100元"
        android:textColor="#FF5511"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/favor_item_desTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favor_item__nameTv"
        android:layout_alignStart="@+id/favor_item__nameTv"
        android:layout_below="@+id/favor_item__nameTv"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="dddddddddddddddddd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/favor_item__chapriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/favor_item__jianpriceTv"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/favor_item__jianpriceTv"
        android:layout_toRightOf="@+id/favor_item__jianpriceTv"
        android:background="@drawable/gb_right"
        android:text="立减100元"
        android:textColor="#FF5511"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/favor_item__jianpriceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立减100元"
        android:textSize="16sp"
        android:layout_alignTop="@+id/favor_item__yuanpriceTv"
        android:layout_centerHorizontal="true" />
</RelativeLayout>